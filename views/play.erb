<h2>Let's Rock'n'Roll!</h2>
<div class="well">
  <h4>Dealers hand</h4>
  <ul class="inline">
    <% if session[:player_turn] %>
      <li><img src="/images/cards/cover.jpg"></li>
      <li><img src="/images/cards/<%= get_image(session[:dealer_cards][1]) %>"></li>
    <% else %>
      <% session[:dealer_cards].each do |card| %>
        <li><img src="/images/cards/<%= get_image(card) %>"></li>
      <% end %>
    <% end %>
  </ul>
  <% if session[:player_turn] %>
    <p>Dealer's hand score is: <%= CARD_VALUES[session[:dealer_cards][1][1]] %><p>
  <% else %>
    <p>Dealer's hand score is: <%= total(session[:dealer_cards]) %><p>
  <% end %>
</div>

<div class="well">
  <h4><%= session[:player_name] %>'s hand</h4>
  <ul class="inline">
    <% session[:player_cards].each do |card| %>
      <li><img src="/images/cards/<%= get_image(card) %>"></li>
    <% end %>
  </ul>
  <p><%= session[:player_name] %>'s hand score is: <%= total(session[:player_cards]) %><p>
  <% if total(session[:player_cards]) <= BLACKJACK %>
    <ul class="inline">
      <li>
        <form action="/hit" method="post">
          <button class="btn btn-success" type="submit">Hit</button>
        </form>
      </li>
      <li>
        <form action="/stay" method="post">
          <button class="btn btn-warning" type="button">Stay</button>
        </form>
      </li>
    </ul>
  <% end %>  
</div>

<p>Player actions go here!</p>